<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/thucdoncuaban_chitiet_item"
    android:background="@drawable/bg_conner_td">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_anh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="80dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/thucdoncuaban_chitiet_anh"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/thucdoncuaban_chitiet_tenmon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_anh"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>