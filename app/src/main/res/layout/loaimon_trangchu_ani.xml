<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size20dp"
    android:orientation="vertical"
    android:id="@+id/loaimon_trangchu_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/size80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorGrey"
            android:textSize="@dimen/textsize16sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:textAllCaps="false"
            android:background="@color/colorGrey"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/size10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/size150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size100dp"
                android:background="@color/colorGrey"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:fontFamily="@font/patrick_hand"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_width="@dimen/size150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size100dp"
                android:background="@color/colorGrey"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:fontFamily="@font/patrick_hand"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_width="@dimen/size150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size100dp"
                android:background="@color/colorGrey"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:fontFamily="@font/patrick_hand"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>