<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/thucdoncuaban_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/color_basic"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/thucdoncuaban_loi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_repeatCount="15"
            app:lottie_autoPlay="true"
            android:layout_marginTop="@dimen/size100dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/crying01"/>
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có thực đơn nào!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thucdoncuaban_ani"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_autoPlay="true"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/waiting02"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize16sp"
            android:textAlignment="center"
            android:text="Đang tải dữ liệu xin vui lòng chờ trong giây lát"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/thucdoncuaban_data"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_thucdoncuaban_02"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true">
            <ListView
                android:id="@+id/thucdoncuaban_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="10dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>