<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_white_coner16"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/txtthemthucdon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm vào thực đơn"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGÀY"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ngay"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:layout_marginLeft="25dp"
            android:text="Thứ 2" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ngay"
            android:layout_toRightOf="@id/btn1"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Thứ 3" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ngay"
            android:layout_toRightOf="@id/btn2"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Thứ 4" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Thứ 5" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:layout_toRightOf="@id/btn4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Thứ 6" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:layout_toRightOf="@id/btn5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Thứ 7" />
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bg_button_coner10"
            android:width="5dp"
            android:text="Chủ nhật" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BỮA"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sáng"
            android:layout_below="@id/bua"
            android:background="@drawable/bg_button_coner10"
            android:layout_marginLeft="25dp"/>
        <Button
            android:id="@+id/btn_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trưa"
            android:layout_below="@id/bua"
            android:layout_toRightOf="@id/btn_b1"
            android:background="@drawable/bg_button_coner10"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tối"
            android:layout_below="@id/bua"
            android:layout_toRightOf="@id/btn_b2"
            android:background="@drawable/bg_button_coner10"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phụ"
            android:layout_below="@id/btn_b1"
            android:background="@drawable/bg_button_coner10"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_b4"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_buttonhuy_dialog"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:alpha="0.6"/>
        <Button
            android:id="@+id/btn_them_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_b4"
            android:layout_toRightOf="@id/btn_cancel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_buttonthem_dialog"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>