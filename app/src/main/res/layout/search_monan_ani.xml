<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size10dp"
    android:layout_marginLeft="@dimen/size16dp"
    android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size100dp"
            app:cardCornerRadius="@dimen/size100dp">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size150dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/size150dp"
                    android:layout_height="@dimen/size150dp"
                    android:background="@color/colorGrey"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey"/>
    </LinearLayout>
</LinearLayout>