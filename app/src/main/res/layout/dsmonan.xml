<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:orientation="horizontal"
        android:background="@color/color_basic"
        android:weightSum="7">
        <ImageButton
            android:id="@+id/dsmonan_back_btn"
            android:layout_width="@dimen/size50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:background="@null"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dsmonan_ten_loaimon"
            android:textSize="@dimen/textsize20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/itim"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Danh sách món ăn yêu thích" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dsmonan_nointernet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_repeatCount="50"
            app:lottie_autoPlay="true"
            android:layout_marginTop="@dimen/size100dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/no_internet"/>
        <TextView
            android:textSize="@dimen/textsize18sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiểm tra lại kết nối của bạn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dsmonan_ani"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            app:lottie_repeatCount="10"
            app:lottie_autoPlay="true"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/waiting02"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize16sp"
            android:textAlignment="center"
            android:text="Đang tải dữ liệu xin vui lòng chờ trong giây lát"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_marginRight="@dimen/size10dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dsmonan_rv"/>
</LinearLayout>