<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size10dp"
    app:cardCornerRadius="@dimen/size40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/homnayangi_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size40dp"
            android:layout_height="@dimen/size40dp"
            app:cardCornerRadius="@dimen/size40dp"
            app:cardBackgroundColor="@null">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size150dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/img_monan_homnayangi"
                    android:layout_width="@dimen/size150dp"
                    android:layout_height="@dimen/size150dp"
                    android:src="@drawable/tom_rang_muoi"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:padding="@dimen/size5dp"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sườn xào chua ngọt"
            android:layout_gravity="center"
            android:id="@+id/tv_ten_monan_homnayangi"
            android:background="@color/color_homnayangi_bg"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>